{
  "name": "@freik/node-utils",
  "version": "0.2.3",
  "description": "My personal set of utilities for NodeJS",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "private": false,
  "bugs": {
    "url": "https://github.com/kevinfrei/node-freik-utils/issues"
  },
  "homepage": "https://github.com/kevinfrei/node-freik-utils#readme",
  "keywords": [
    "node-utils"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinfrei/node-freik-utils.git"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "rimraf lib && tsc",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn test && yarn run lint",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@freik/core-utils": "^0.3.3",
    "@freik/simplelogger": "^1.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.2",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "lib/**/*"
  ]
}
